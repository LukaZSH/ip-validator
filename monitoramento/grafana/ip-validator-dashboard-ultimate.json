{
  "dashboard": {
    "id": null,
    "title": "üéØ IP Validator - Ultimate Application Monitoring",
    "tags": ["ip-validator", "logs", "monitoring", "production", "advanced"],
    "style": "dark",
    "timezone": "America/Sao_Paulo",
